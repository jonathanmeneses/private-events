<h1>
  <%= @user.name%>'s Events
</h1>
<h2>Events</h2>
<% if @user_events_invited_current_user.any? %>
  <% @user_events_invited_current_user.each do |event| %>
    <% formatted_date=event.date.strftime("%A, %B %-d, %Y, at (%H:%M)") %>
    <div class='user-event-container'>
      <h3 class='user-event-title'>
        <%= event.title %>
      </h3>
      <h4 class='user-event-location'>Location: <%= event.location %>
      </h4>
      <h4 class='user-event-date'>Date: <%= formatted_date %>
      </h4>
      <p class='user-event-description'>
        <%= event.description %>
      </p>
      <% if @user == current_user %>
        <%= link_to edit_event_path%>
      <%end%>
    </div>
  <% end %>
<% end %>
<%= link_to 'Back' , root_path %>